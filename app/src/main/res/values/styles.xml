<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App theme that follows system dark mode setting -->
    <style name="Theme.AutoRecord" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Base button style with Material Design ripple effects -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">#40FFFFFF</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
